// Section 3

@import '../styl/m-rem'
@import '../styl/m-media'

.section-3
  padding-top m-rem(100)
  padding-bottom m-rem(100)
  background-color #fafafa
  &__title
    font-size m-rem(30)
    font-weight 400
    color #303030
    margin-bottom m-rem(24)
    text-align center
    +widerthan($md)
      text-align left
  &__text
    font-size m-rem(16)
    color #777
    line-height 2
    margin-bottom m-rem(54)
    text-align center
    +widerthan($md)
      text-align left
  &__button
    border 1px #655aa3 solid
    display block
    border-radius 50px
    background-color #655aa3
    padding m-rem(18) m-rem(48)
    text-transform uppercase
    color white
    font-size m-rem(11)
    margin-left auto
    margin-right auto
    +widerthan($md)
      margin-left 0
      margin-right 0
    font-weight 700
    letter-spacing .08em
    margin-bottom 1rem
    &:hover
    &:active
      color #303030
      background-color white
  &__phones
    height 100%
    min-height m-rem(610)
    background-image url('../../images/section-3-phones.png')
    background-repeat no-repeat
    background-position center center
    background-size contain
    +widerthan($md)
      background-position right center
