// Main Navigation

@import '../styl/m-rem'

.main-nav-toggle
  background-color transparent
  border 0
  color white
  font-size m-rem(18)
  display block
  margin-left auto

.main-nav
  display none
  position absolute
  top m-rem(60)
  right 0
  left 0
  padding-top m-rem(16)
  &_active
    display block
  &__list
    display flex
    flex-direction column
    align-items baseline
    list-style none
    padding-left 0
    margin-bottom 0
  &__item
    margin-bottom m-rem(24)
    margin-right auto
    margin-left auto
  &__link
    font-size m-rem(14)
    font-weight 400
    letter-spacing .08
    text-transform uppercase
    color white
    &:hover
    &:active
      color white
      text-decoration underline

@media (min-width 768px)
  .main-nav-toggle
    display none

  .main-nav
    padding-top 0
    display block
    margin-left auto
    position static
    &__list
      flex-direction row
    &__item
      margin-left 0
      margin-right 1.75rem
      margin-bottom 0
      &_last
        margin-right 0
